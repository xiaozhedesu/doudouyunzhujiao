    --line: #e5e5e5;           /* 分割线 */
    --bg: #f5f5f5;             /* 页面背景 */
    --radius: 8rpx;            /* 统一圆角 */
    font-size: 32rpx;          /* 基准字号 */
    color: var(--text);
    background: var(--bg);
  }
  
